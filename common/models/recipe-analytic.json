{
  "name": "RecipeAnalytic",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "widgets": [
    {
      "label": "Total recipe added",
      "icon": "si-bar-chart",
      "fetchLocally": true,
      "propObj": {
        "type": "$allTime",
        "where": {},
        "dateProp": "added"
      }
    },
    {
      "label": "Recipe added today",
      "fetchLocally": true,
      "icon": "si-calendar",
      "propObj": {
        "type": "$today",
        "where": {},
        "dateProp": "added"
      }
    },
    {
      "label": "Recipe viewed today",
      "icon": "si-graph",
      "fetchLocally": true,
      "propObj": {
        "type": "$today",
        "where": {},
        "dateProp": "lastModified"
      }
    },
    {
      "label": "Recipe viewed this week",
      "icon": "si-graph",
      "fetchLocally": true,
      "propObj": {
        "type": "$week",
        "where": {},
        "dateProp": "lastModified"
      }
    }
  ],
  "filters": {
    "priority": {
      "type": "$select",
      "label": "Select priority",
      "options": [
        {
          "id": 1,
          "name": "normal"
        },
        {
          "id": 2,
          "name": "medium"
        },
        {
          "id": 3,
          "name": "high"
        }
      ]
    },
    "added": {
      "type": "$date",
      "label": "Recipe added between"
    }
  },
  "validationsBackend": {
    "rules": {
      "totalViews": {
        "required": true,
        "number": true
      },
      "priority": {
        "required": true
      },
      "recipe": {
        "required": true,
        "valueNotEquals": ""
      }
    },
    "messages": {
      "phoneNumber": {
        "required": "total views field  is required",
        "number": "total view must be a number"
      },
      "priority": {
        "required": "priority name is required"
      },
      "recipe": {
        "required": "Recipe is required",
        "valueNotEquals": "Recipe is required"
      }
    }
  },
  "tables": {
    "priority": {
      "tag": {
        "medium": "label-warning",
        "normal": "label-primary",
        "high": "label-danger"
      },
      "search": "text"
    },
    "recipe_description": {
      "display": false
    },
    "recipe_mainImage": {
      "display": false
    },
    "recipe_recipeType": {
      "display": false
    },
    "recipe_servings": {
      "display": false
    },
    "recipe_status": {
      "display": false
    },
    "recipe_youtubeVideoId": {
      "display": false
    },
    "recipe_stepsImage": {
      "display": false
    },
    "recipe_stepsDescription": {
      "display": false
    },
    "recipe_added": {
      "display": false
    },
    "recipe_name": {
      "display": true,
      "search": "related",
      "relatedModel": "Recipe",
      "foreignKey": "recipeId",
      "propertyName": "name"
    },
    "added": {
      "date": true,
      "search": "date"
    },
    "lastModified": {
      "date": true,
      "search": "date"
    },
    "totalViews": {
      "search": "number"
    },
    "averageRating": {
      "search": "number"
    },
    "totalComment": {
      "search": "number"
    }
  },
  "properties": {
    "totalViews": {
      "type": "number",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "number",
          "label": "Change total views of recipe.",
          "id": "totalViews"
        }
      }
    },
    "added": {
      "type": "date",
      "defaultFn": "now",
      "template": {
        "type": "dummy"
      }
    },
    "lastModified": {
      "type": "date",
      "template": {
        "type": "dummy"
      }
    },
    "averageRating": {
      "type": "number",
      "default": 0,
      "template": {
        "type": "dummy"
      }
    },
    "totalComment": {
      "type": "number",
      "default": 0,
      "template": {
        "type": "dummy"
      }
    },
    "priority": {
      "type": "string",
      "required": true,
      "default": "normal",
      "template": {
        "type": "selectString",
        "templateOptions": {
          "label": "Select priority for a recipe",
          "id": "recipePriorityType",
          "options": [
            "normal",
            "medium",
            "high"
          ]
        }
      }
    }
  },
  "validations": [],
  "relations": {
    "recipe": {
      "type": "belongsTo",
      "model": "Recipe",
      "foreignKey": "",
      "onCascadeDelete": false,
      "templateOptions": {
        "btnText": "Add Recipe",
        "searchProp": "name",
        "create": false,
        "search": true,
        "hide": false,
        "id": "RecipeId"
      }
    }
  },
  "acls": [{
    "accessType": "*",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "DENY"
  },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getSchema"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getAbsoluteSchema"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property":"save"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }],
  "methods": {}
}
