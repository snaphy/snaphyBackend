{
  "name": "EmployeeDetails",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "validationsBackend": {
    "rules": {
      "address": {
        "required": true,
        "minlength": 5
      },
      "category": {
        "required": true,
        "valueNotEquals": ""
      },
      "contactNumber": {
        "required": true,
        "minlength": "10",
        "maxlength": "10",
        "number": true
      },
      "employee": {
        "required": true,
        "valueNotEquals": ""
      }
    },
    "messages": {
      "address": {
        "required": "Address  is required",
        "minlength": "Minimum permitted address length is atleast 5"
      },
      "contactNumber": {
        "required": "Contact number is required",
        "minlength": "Minimum length of contact number is 10",
        "number": "Contact number must be a number"
      },
      "employee": {
        "required": "Please add a employee for this contact",
        "valueNotEquals": "Please add a employee for this contact"
      }
    }
  },
  "tables": {
    "employee_email": {
      "display": true,
      "search": "related",
      "relatedModel": "Employee",
      "foreignKey": "employeeId",
      "propertyName": "email"
    },
    "employee_date": {
      "display": false
    },
    "contactNumber": {
      "display": true,
      "search": "text"
    },
    "address": {
      "display": true,
      "search": "text"
    }
  },
  "properties": {
    "address": {
      "type": "string",
      "required": "true",
      "template": {
        "type": "textarea",
        "templateOptions": {
          "type": "text",
          "label": "Enter Address",
          "id": "address"
        }
      }
    },
    "contactNumber": {
      "type": "string",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "text",
          "label": "Enter Contact Number",
          "id": "number"
        }
      }
    }
  },
  "validations": [],
  "relations": {
    "employee": {
      "type": "belongsTo",
      "model": "Employee",
      "foreignKey": "",
      "templateOptions": {
        "searchProp": "email",
        "create": false,
        "search": true,
        "btnText": "Add Employee ",
        "id": "employeeName"
      }
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$staff",
      "permission": "ALLOW",
      "property": "save"
    },
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "save"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "staff",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getSchema"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getAbsoluteSchema"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW"
