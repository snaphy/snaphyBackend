{
  "name": "EmployeeDetails",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "address": {
      "type": "string",
      "template": {
        "type": "textarea",
        "templateOptions": {
          "type": "text",
          "label": "Enter Address",
          "id": "address"
        }
      }
    },
    "contactNumber": {
      "type": "number",
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "text",
          "label": "Enter Contact Number",
          "id": "number"
        }
      }
    }
  },
  "validations": [],
  "relations": {
    "employees": {
      "type": "hasOne",
      "model": "Employee",
      "foreignKey": "",
      "templateOptions": {
        "searchProp": "email",
        "create": false,
        "search": true,
        "btnText": "Add Employee "
      }
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "save"
    },
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "save"
    }
  ],
  "methods": []
}
