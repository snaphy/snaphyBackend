{
  "name": "RecipeTag",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "validationsBackend": {
    "rules": {
      "name": {
        "required": true,
        "minlength": 3
      }
    },
    "messages": {
      "name": {
        "required": "Ingredient name is required",
        "minlength": "Minimum permitted length is atleast 3"
      }
    }
  },
  "hidden": [
    "recipes_"
  ],
  "tables": {
    "name": {
      "search": "text",
      "tag": {}
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "text",
          "label": "Enter recipe search tags",
          "id": "recipeTag"
        }
      }
    },
    "recipes_": {
      "type": "object"
    }
  },
  "validations": [],
  "relations": {
    "recipes": {
      "type": "hasAndBelongsToMany",
      "model": "Recipe",
      "foreignKey": ""
    }
  },
  "acls": [{
    "accessType": "*",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "DENY"
  },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getSchema"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getAbsoluteSchema"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }],
  "methods": {}
}
