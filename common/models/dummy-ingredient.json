{
  "name": "DummyIngredient",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "quantity": {
      "type": "number",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "number",
          "label": "Enter the quantity of  ingredient ",
          "id": "quantity"
        }
      }
    },
    "halfQuantity": {
      "type": "string",
      "default": "0",
      "template": {
        "type": "selectString",
        "templateOptions": {
          "type": "string",
          "label": "Enter the half quantity of recipe ingredient",
          "id": "halfQuantity",
          "options": [
            "1/8",
            "1/4",
            "1/3",
            "3/8",
            "1/2",
            "5/8",
            "2/3",
            "3/4",
            "7/8",
            "0"
          ]
        }
      }
    },
    "unit": {
      "type": "string",
      "required": true,
      "template": {
        "type": "selectString",
        "templateOptions": {
          "type": "text",
          "label": "Enter the recipe metric like tablespoon, pinch, bowl etc",
          "id": "recipeMetric",
          "options": [
            "piece",
            "slice",
            "stick",
            "clove",
            "package",
            "leaf",
            "bunch",
            "sprig",
            "handful",
            "pinch",
            "kg",
            "grams",
            "litre",
            "cl",
            "ml",
            "lb",
            "oz",
            "tsp",
            "tbsp",
            "cup"
          ]
        }
      }
    },
    "name": {
      "type": "string",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "text",
          "label": "Enter Ingredient name",
          "id": "dummyRecipeIngredient"
        }
      }
    }
  },
  "validations": [],
  "relations": {
    "recipe": {
      "type": "belongsTo",
      "model": "Recipe",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": {}
}
