{
  "name": "Chef",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "filters": {
    "added": {
      "type": "$date",
      "label": "Chef added between"
    },
    "customer_email": {
      "type": "$select",
      "label": "Search chef by customer email.",
      "getOptionsFromColumn": true,
      "options": []
    },
    "status": {
      "type": "$select",
      "label": "Filter chef by status",
      "getOptionsFromColumn": false,
      "options": [
        {
          "id": 1,
          "name": "allow"
        },
        {
          "id": 2,
          "name": "onhold"
        },
        {
          "id": 3,
          "name": "expired"
        }
      ]
    }
  },
  "complexValidation": {
    "rules": {
      "latitude": {
        "required": true,
        "number": true
      },
      "longitude": {
        "required": true,
        "number": true
      }
    },
    "messages": {
      "latitude": {
        "required": "Latitude is required",
        "number": "Latitude must be a number"
      },
      "longitude": {
        "required": "Longitude is required",
        "number": "Longitude must be a number"
      }
    }
  },
  "tables": {
    "customer_phoneNumber": {
      "display": false
    },
    "customer_firstName": {
      "display": true,
      "search": "related",
      "relatedModel": "Customer",
      "foreignKey": "customerId",
      "propertyName": "firstName"
    },
    "customer_lastName": {
      "display": true,
      "search": "related",
      "relatedModel": "Customer",
      "foreignKey": "customerId",
      "propertyName": "lastName"
    },
    "customer_profilePic": {
      "display": false
    },
    "customer_password": {
      "display": false
    },
    "customer_date": {
      "display": false
    },
    "geolocation": {
      "display": false
    },
    "address": {
      "search": "text"
    },
    "added": {
      "date": true,
      "search": "date"
    },
    "expiryDate": {
      "date": true,
      "search": "date"
    },
    "allowedRecipes": {
      "search": "number"
    },
    "customer_email": {
      "display": true,
      "search": "related",
      "relatedModel": "Customer",
      "foreignKey": "customerId",
      "propertyName": "email"
    },
    "status": {
      "tag": {
        "expired": "label-danger",
        "allow": "label-primary",
        "onhold": "label-warning"
      },
      "search": "text"
    }
  },
  "widgets": [
    {
      "label": "Availaible chefs",
      "icon": "si-bar-chart",
      "fetchLocally": true,
      "propObj": {
        "type": "$allTime",
        "where": {},
        "dateProp": "added"
      }
    },
    {
      "label": "Rejected Chefs",
      "icon": "si-bar-chart",
      "fetchLocally": true,
      "propObj": {
        "type": "$allTime",
        "where": {
          "status": "rejected"
        },
        "dateProp": "added"
      }
    },
    {
      "label": "OnHold Chefs",
      "icon": "si-bar-chart",
      "fetchLocally": true,
      "propObj": {
        "type": "$allTime",
        "where": {
          "status": "onhold"
        },
        "dateProp": "added"
      }
    }
  ],
  "validationsBackend": {
    "rules": {
      "address": {
        "required": true,
        "minlength": 5
      },
      "expiryDate": {
        "required": true,
        "date": true
      },
      "customer": {
        "required": true,
        "valueNotEquals": ""
      },
      "allowedRecipes": {
        "required": true,
        "number": true
      }
    },
    "messages": {
      "address": {
        "required": "Address is required",
        "minlength": "Address should be atleast 5 word length"
      },
      "customer": {
        "required": "Customer is required",
        "valueNotEquals": "Address is required"
      },
      "expiryDate": {
        "required": "Date is required",
        "date": "Date must be valid mm/dd/yy"
      },
      "allowedRecipes": {
        "required": "You must enter the total allowed recipes.",
        "number": "Allowed recipes must be a number"
      }
    }
  },
  "properties": {
    "address": {
      "type": "string",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "text",
          "label": "Enter chefs address",
          "id": "chefAddress"
        }
      }
    },
    "geolocation": {
      "type": "geopoint",
      "required": true,
      "template": {
        "type": "objectValue",
        "templateOptions": {
          "fields": [
            {
              "type": "input",
              "key": "lat",
              "templateOptions": {
                "type": "text",
                "label": "Enter latitude",
                "id": "latitude"
              }
            },
            {
              "type": "input",
              "key": "lng",
              "templateOptions": {
                "type": "text",
                "label": "Enter longitude",
                "id": "longitude"
              }
            }
          ]
        }
      }
    },
    "status": {
      "type": "string",
      "required": false,
      "template": {
        "type": "selectString",
        "templateOptions": {
          "label": "Add a current status to allow/restrict a chef.",
          "id": "chefStatus",
          "options": [
            "allow",
            "onhold",
            "expired"
          ]
        }
      }
    },
    "added": {
      "type": "date",
      "defaultFn": "now",
      "template": {
        "type": "dummy"
      }
    },
    "allowedRecipes": {
      "type": "number",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "number",
          "label": "Enter total allowed recipes",
          "id": "allowedRecipes"
        }
      }
    },
    "expiryDate": {
      "type": "date",
      "required": true,
      "template": {
        "type": "date",
        "templateOptions": {
          "label": "Add chefs expiry date.",
          "placeholder": "Enter expiry date",
          "id": "expiryDate"
        }
      }
    }
  },
  "validations": [],
  "relations": {
    "customer": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": "",
      "onCascadeDelete": false,
      "templateOptions": {
        "btnText": "Attach customer",
        "searchProp": "email",
        "create": false,
        "search": true,
        "hide": false,
        "id": "customer"
      }
    },
    "popularities": {
      "type": "hasOne",
      "model": "Popularity",
      "foreignKey": "",
      "onCascadeDelete": true
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getSchema"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getAbsoluteSchema"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }

  ],
  "methods": {}
}
