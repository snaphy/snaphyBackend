{
  "name": "Chef",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "filters": {
    "added": {
      "type": "$date",
      "label": "Chef added between"
    },
    "customers_email": {
      "type": "$select",
      "label": "Search chef by customer email.",
      "getOptionsFromColumn": true,
      "options": []
    },
    "status": {
      "type": "$select",
      "label": "Filter chef by status",
      "getOptionsFromColumn": false,
      "options": [
        {
          "id": 1,
          "name": "allow"
        },
        {
          "id": 2,
          "name": "onhold"
        },
        {
          "id": 3,
          "name": "expired"
        }
      ]
    }
  },
  "tables": {
    "customers_phoneNumber": {
      "display": false
    },
    "customers_firstName": {
      "display": true
    },
    "customers_lastName": {
      "display": true
    },
    "customers_profilePic": {
      "display": false
    },
    "customers_password": {
      "display": false
    },
    "customers_date": {
      "display": false
    },
    "geolocation": {
      "display": false
    },
    "added": {
      "date": true,
      "search": "date"
    },
    "expiryDate": {
      "date": true,
      "search": "date"
    },
    "status": {
      "tag": {
        "expired": "label-danger",
        "allow": "label-primary",
        "onhold": "label-warning"
      }
    }
  },
  "widgets": [
    {
      "label": "Availaible chefs",
      "icon": "si-bar-chart",
      "fetchLocally": true,
      "propObj": {
        "type": "$allTime",
        "where": {},
        "dateProp": "added"
      }
    },
    {
      "label": "Rejected Chefs",
      "icon": "si-bar-chart",
      "fetchLocally": true,
      "propObj": {
        "type": "$allTime",
        "where": {
          "status": "rejected"
        },
        "dateProp": "added"
      }
    },
    {
      "label": "OnHold Chefs",
      "icon": "si-bar-chart",
      "fetchLocally": true,
      "propObj": {
        "type": "$allTime",
        "where": {
          "status": "onhold"
        },
        "dateProp": "added"
      }
    }
  ],
  "validationsBackend": {
    "rules": {
      "address": {
        "required": true
      },
      "customers_email": {
        "required": true,
        "email": true
      }
    },
    "messages": {
      "address": {
        "required": "Address is required"
      },
      "customers_email": {
        "required": "email is required"
      }
    }
  },
  "properties": {
    "address": {
      "type": "string",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "text",
          "label": "Enter chefs address",
          "id": "chefAddress"
        }
      }
    },
    "geolocation": {
      "type": "geopoint",
      "required": true,
      "template": {
        "type": "objectValue",
        "templateOptions": {
          "fields": [
            {
              "type": "input",
              "key": "lat",
              "templateOptions": {
                "type": "text",
                "label": "Enter latitude",
                "id": "latitude"
              }
            },
            {
              "type": "input",
              "key": "lng",
              "templateOptions": {
                "type": "text",
                "label": "Enter longitude",
                "id": "longitude"
              }
            }
          ]
        }
      }
    },
    "status": {
      "type": "string",
      "required": false,
      "template": {
        "type": "selectString",
        "templateOptions": {
          "label": "Add a current status to allow/restrict a chef.",
          "id": "chefStatus",
          "options": [
            "allow",
            "onhold",
            "expired"
          ]
        }
      }
    },
    "added": {
      "type": "date",
      "defaultFn": "now",
      "template": {
        "type": "dummy"
      }
    },
    "allowedRecipes": {
      "type": "number",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "number",
          "label": "Enter total allowed recipes",
          "id": "allowedRecipes"
        }
      }
    },
    "expiryDate": {
      "type": "date",
      "required": true,
      "template": {
        "type": "date",
        "templateOptions": {
          "label": "Add chefs expiry date.",
          "placeholder":"Enter expiry date"
        }
      }
    }
  },
  "validations": [],
  "relations": {
    "customers": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": "",
      "onCascadeDelete": false,
      "templateOptions": {
        "btnText": "Attach customer",
        "searchProp": "email",
        "create": false,
        "search": true,
        "hide": false
      }
    },
    "popularities": {
      "type": "hasOne",
      "model": "Popularity",
      "foreignKey": "",
      "onCascadeDelete": true
    }
  },
  "acls": [],
  "methods": {}
}
