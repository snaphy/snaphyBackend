{
  "name": "Comments",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "widgets": [
    {
      "label": "Total Comments",
      "icon": "si-bar-chart",
      "fetchLocally": true,
      "propObj": {
        "type": "$allTime",
        "where": {},
        "dateProp": "date"
      }
    },
    {
      "label": "Comment added today",
      "fetchLocally": true,
      "icon": "si-calendar",
      "propObj": {
        "type": "$today",
        "where": {},
        "dateProp": "date"
      }
    },
    {
      "label": "Comment with rating  5",
      "icon": "si-graph",
      "fetchLocally": true,
      "propObj": {
        "type": "$allTime",
        "where": {
          "rating": 5
        },
        "dateProp": "date"
      }
    }
  ],
  "filters": {
    "date": {
      "type": "$date",
      "label": "Recipe added between"
    },
    "status": {
      "type": "$select",
      "label": "Select comment status",
      "options": [
        {
          "id": 1,
          "name": "publish"
        },
        {
          "id": 2,
          "name": "onhold"
        },
        {
          "id": 3,
          "name": "rejected"
        }
      ]
    },
    "rating": {
      "type": "$multiSelect",
      "label": "Select rating",
      "getOptionsFromColumn": false,
      "options": [
        {
          "id": "1",
          "name": "1"
        },
        {
          "id": "2",
          "name": "2"
        },
        {
          "id": "3",
          "name": "3"
        },
        {
          "id": "4",
          "name": "4"
        },
        {
          "id": "5",
          "name": "5"
        }
      ]
    }
  },
  "tables": {
    "date": {
      "date": true,
      "search": "date"
    },
    "customer_phoneNumber": {
      "display": false
    },
    "customer_firstName": {
      "display": false
    },
    "customer_lastName": {
      "display": false
    },
    "customer_profilePic": {
      "display": false
    },
    "customer_password": {
      "display": false
    },
    "customer_date": {
      "display": false
    },
    "recipe_description": {
      "display": false
    },
    "recipe_mainImage": {
      "display": false
    },
    "recipe_recipeType": {
      "display": false
    },
    "recipe_servings": {
      "display": false
    },
    "recipe_status": {
      "display": false
    },
    "recipe_youtubeVideoId": {
      "display": false
    },
    "recipe_stepsImage": {
      "display": false
    },
    "recipe_added": {
      "display": false
    },
    "recipe_stepsDescription": {
      "display": false
    },
    "recipe_name": {
      "display": true,
      "search": "related",
      "relatedModel": "Recipe",
      "foreignKey": "recipeId",
      "propertyName": "name"
    },
    "customer_email": {
      "display": true,
      "search": "related",
      "relatedModel": "Customer",
      "foreignKey": "customerId",
      "propertyName": "email"
    },
    "status": {
      "search": "select",
      "options": [
        "publish",
        "onhold",
        "rejected"
      ]
    },
    "rating": {
      "search": "number"
    }
  },
  "validationsBackend": {
    "rules": {
      "comment": {
        "required": true,
        "minlength": "5"
      },
      "rating": {
        "required": "true",
        "number": true,
        "range": [
          1,
          5
        ],
        "valueNotEquals": ""
      },
      "recipe": {
        "required": true,
        "valueNotEquals": ""
      },
      "customer": {
        "required": true,
        "valueNotEquals": ""
      }
    },
    "messages": {
      "comment": {
        "required": "comment is required",
        "minlength": "Minimum permitted length is atleast 5"
      },
      "rating": {
        "required": "Rating is required",
        "number": "Rating must be a number",
        "range": "Rating must be in range of 1-5",
        "valueNotEquals": "Please select recipe servings"
      },
      "recipe": {
        "required": "Recipe is required",
        "valueNotEquals": "Recipe is required"
      },
      "customer": {
        "required": "Customer is required",
        "valueNotEquals": "Customer is required"
      }
    }
  },
  "properties": {
    "date": {
      "type": "date",
      "defaultFn": "now",
      "template": {
        "type": "dummy"
      }
    },
    "status": {
      "type": "string",
      "default": "publish",
      "template": {
        "type": "selectString",
        "templateOptions": {
          "label": "add comment status",
          "id": "commentStatus",
          "options": [
            "publish",
            "onhold",
            "rejected"
          ]
        }
      }
    },
    "comment": {
      "type": "string",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "text",
          "label": "Add comment",
          "id": "recipeComment"
        }
      }
    },
    "rating": {
      "type": "number",
      "required": true,
      "template": {
        "type": "selectString",
        "templateOptions": {
          "label": "Select rating for recipe",
          "id": "recipeRating",
          "options": [
            "1",
            "2",
            "3",
            "4",
            "5"
          ]
        }
      }
    }
  },
  "validations": [],
  "relations": {
    "customer": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": "",
      "templateOptions": {
        "btnText": "Add Customer",
        "searchProp": "email",
        "create": false,
        "id": "customerId"
      }
    },
    "recipe": {
      "type": "belongsTo",
      "model": "Recipe",
      "foreignKey": "",
      "templateOptions": {
        "btnText": "Add Recipe",
        "searchProp": "name",
        "create": false,
        "id": "recipeId"
      }
    }
  },
  "acls": [{
    "accessType": "*",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "DENY"
  },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getSchema"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getAbsoluteSchema"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }],
  "methods": {}
}
