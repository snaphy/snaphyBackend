{
  "name": "ContactChef",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "widgets": [
    {
      "label": "Total Chef Contacted",
      "icon": "si-bar-chart",
      "fetchLocally": true,
      "propObj": {
        "type": "$allTime",
        "where": {},
        "dateProp": "added"
      }
    },
    {
      "label": "Chef contacted In A Week",
      "fetchLocally": true,
      "icon": "si-calendar",
      "propObj": {
        "type": "$week",
        "where": {},
        "dateProp": "added"
      }
    },
    {
      "label": "Chef contacted Today",
      "icon": "si-graph",
      "fetchLocally": true,
      "propObj": {
        "type": "$today",
        "where": {},
        "dateProp": "added"
      }
    }
  ],
  "validationsBackend": {
    "rules": {
      "message": {
        "required": true,
        "minlength": 5
      },
      "customer": {
        "required": true,
        "valueNotEquals": ""
      },
      "chef": {
        "required": true,
        "valueNotEquals": ""
      }
    },
    "messages": {
      "message": {
        "required": "Message is required",
        "minlength": "Message should be of atleast 5 length"
      },
      "customer": {
        "required": "Customer is required",
        "valueNotEquals": "Please add customer name"
      },
      "chef": {
        "required": "Chef name is required",
        "valueNotEquals": "Please add Chef name"
      }
    }
  },
  "tables": {
    "message": {
      "display": true
    },
    "customer_phoneNumber": {
      "display": false
    },
    "customer_lastName": {
      "display": false
    },
    "customer_profilePic": {
      "display": false
    },
    "customer_password": {
      "display": false
    },
    "customer_date": {
      "display": false
    },
    "customer_email": {
      "display": true,
      "search": "related",
      "relatedModel": "Customer",
      "foreignKey": "customerId",
      "propertyName": "email"
    },
    "customer_firstName": {
      "display": true,
      "search": "related",
      "relatedModel": "Customer",
      "foreignKey": "customerId",
      "propertyName": "firstName"
    },
    "chef_phoneNumber": {
      "display": false
    },
    "chef_lastName": {
      "display": false
    },
    "chef_profilePic": {
      "display": false
    },
    "chef_password": {
      "display": false
    },
    "chef_date": {
      "display": false
    },
    "chef_email": {
      "display": true,
      "search": "related",
      "relatedModel": "Customer",
      "foreignKey": "customerId",
      "propertyName": "email"
    },
    "chef_firstName": {
      "display": true,
      "search": "related",
      "relatedModel": "Customer",
      "foreignKey": "customerId",
      "propertyName": "firstName"
    },
    "added": {
      "date": true
    }
  },
  "properties": {
    "message": {
      "type": "string",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "text",
          "label": "Enter message",
          "id": "contactChefMessage"
        }
      }
    },
    "added": {
      "type": "date",
      "defaultFn": "now",
      "template": {
        "type": "dummy"
      }
    }
  },
  "validations": [],
  "relations": {
    "chef": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": "",
      "templateOptions": {
        "btnText": "Add Chef",
        "searchProp": "email",
        "label": "Add chef",
        "create": false,
        "id": "chefIdName"
      }
    },
    "customer": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": "",
      "templateOptions": {
        "btnText": "Add Customer",
        "searchProp": "email",
        "create": false,
        "id": "customerIdName"
      }
    }
  },
  "acls": [{
    "accessType": "*",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "DENY"
  },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getSchema"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getAbsoluteSchema"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }],
  "methods": {}
}
