{
  "name": "Category",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "tables": {
    "name": {
      "tag": {
        "breakfast": "label-warning",
        "dinner": "label-primary",
        "lunch": "label-danger"
      }
    }
  },
  "validationsBackend": {
    "rules": {
      "name": {
        "required": true
      }
    },
    "messages": {
      "name": {
        "required": "Category is required"
      }
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "template": {
        "type": "selectString",
        "templateOptions": {
          "label": "Enter recipe category name",
          "id": "recipeServings",
          "options": [
            "breakfast",
            "lunch",
            "dinner"
          ]
        }
      }
    }
  },
  "validations": [],
  "relations": {
    "recipes": {
      "type": "hasAndBelongsToMany",
      "model": "Recipe",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": []
}
